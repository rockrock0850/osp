<?xml version="1.0" encoding="UTF-8"?>

<!-- <Configuration xmlns="http://logging.apache.org/log4j/2.0/config" -->
<!-- xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" -->
<!-- xsi:schemaLocation="http://logging.apache.org/log4j/2.0/config  -->
<!-- Log4j-config.xsd"> -->

<Configuration status="WARN">

	<Properties>
		<Property name="home">log/OSP/OSP-PLATFORM</Property>
	</Properties>

    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
        	<PatternLayout pattern="%-5p %c - %m%n"/>
<!--             <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%c] [%M] : %m%n%d"/>  -->
        </Console>

		<RollingFile name="All" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
			    <!-- Paul 修正：設定檔案編碼 -->
				<charset>UTF-8</charset>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%c] [%M] : %m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="filterappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="actionappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="facadeappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="serviceappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="daoappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="mwareappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>

		<RollingFile name="sqlappender" fileName="${home}/ALL.log" 
		filePattern="${home}/ALL.log.%d{yyyy-MM-dd-HH}" >
			<PatternLayout>
				<pattern>%m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>
		
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="All"/>
        </Root>

        <AsyncLogger name="com.fet.generic.logger" level="INFO" additivity="false" includeLocation="true">
           	<AppenderRef ref="filterappender" level="INFO"/>             
        </AsyncLogger>

        <AsyncLogger name="com.fet.generic.aop.action" level="INFO" additivity="false">
           	<AppenderRef ref="actionappender" level="INFO"/>            
        </AsyncLogger>

        <AsyncLogger name="com.fet.generic.aop.facade" level="INFO" additivity="false">
           	<AppenderRef ref="facadeappender" level="INFO"/>      
        </AsyncLogger>

        <AsyncLogger name="com.fet.generic.aop.service" level="INFO" additivity="false">
           	<AppenderRef ref="serviceappender" level="INFO"/>            
        </AsyncLogger>

        <AsyncLogger name="com.fet.generic.aop.dao" level="INFO" additivity="false">
           	<AppenderRef ref="daoappender" level="INFO"/>          
        </AsyncLogger>

        <AsyncLogger name="com.fet.generic.aop.mware" level="INFO" additivity="false">
           	<AppenderRef ref="mwareappender" level="INFO"/>            
        </AsyncLogger>

		<AsyncLogger name="com.fet.generic.aop.sql" level="INFO" additivity="false" includeLocation="true">
<!-- 		LoggerConfig預設值為true; Log4jLogEvent預設值為flase -->
<!-- 		        <Logger name="com.fet.generic.aop.sql" level="INFO" additivity="false" includeLocation="false"> -->
           	<AppenderRef ref="sqlappender" level="INFO"/>              
        </AsyncLogger>

		<!-- Struts2 才需要使用的設定 -->
<!-- 		<AsyncLogger name="com.opensymphony.xwork2.ognl.OgnlValueStack" level="ERROR" /> -->
<!-- 		<AsyncLogger name="com.opensymphony.xwork2.ObjectFactory" level="FATAL" /> -->
		
		<!-- Hibernate 才需要使用的設定 -->
		
		<!-- Paul 修正 -->
		<AsyncLogger name="org.hibernate" level="OFF" />
		<AsyncLogger name="org.springframework" level="OFF" />
		<AsyncLogger name="org.apache.tiles" level="OFF" />
		
		<!-- 
		        原先舊有的設定
		  	<AsyncLogger name="org.hibernate.SQL" level="INFO" />
			<AsyncLogger name="org.hibernate.type" level="INFO" />
			<AsyncLogger name="org.hibernate.hql" level="INFO" />
			<AsyncLogger name="org.hibernate.jdbc" level="INFO" />
		   -->
		
    </Loggers>

</Configuration>
